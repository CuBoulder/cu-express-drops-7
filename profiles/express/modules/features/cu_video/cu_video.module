<?php
/**
 * @file
 * Code for the Video feature.
 */

include_once 'cu_video.features.inc';

/**
 *  Implements hook_form_FORM_ID_alter.
 */
function cu_video_form_video_node_form_alter(&$form, &$form_state, $form_id) {
  $form['menu']['enabled']['#default_value'] = TRUE;
}

/**
 * Implements hook_theme_registry_alter().
 *
 * Let Drupal know that we've got node--slider.tpl.php in our module directory.
 */
function cu_video_theme_registry_alter(&$theme_registry) {
  $module_path = drupal_get_path('module', 'video');
  $theme_registry_copy = $theme_registry;
  _theme_process_registry($theme_registry_copy, 'phptemplate', 'theme_engine', 'node', $module_path);
  $theme_registry += array_diff_key($theme_registry_copy, $theme_registry);
  $hooks = array('node');
  foreach ($hooks as $h) {
	  if (isset($theme_registry[$h]['theme paths'])) {
	    $first_element = array_shift($theme_registry[$h]['theme paths']);
	    array_unshift($theme_registry[$h]['theme paths'], array_shift($theme_registry[$h]['theme paths']), $module_path);
  	}
  }
}

/**
 * Implements hook_page_alter().
 */
function cu_video_page_alter(&$page) {
  // Add video css
  drupal_add_css(drupal_get_path('module', 'cu_video') . '/css/cu_video.css');
}

/**
 * Implements hook_menu_alter().
 */
function cu_video_menu_alter(&$items) {
  $items['node/add/video']['access callback'] = 'cu_video_access';
}

// Return false for all users so no one can add videos.
function cu_video_access() {
  return false;
}
